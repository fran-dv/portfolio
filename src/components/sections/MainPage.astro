---
import Hero from "@/components/sections/Hero.astro";
import { getEntry } from "astro:content";

interface Props {
  locale: "en" | "es";
}
const { locale }: Props = Astro.props;

const heroContent = await getEntry("hero", locale);
---

<main>
  <Hero contentEntry={heroContent!} />
</main>

<style>
  main {
    width: 100%;
    height: 100%;
    max-width: 100dvw;
    overflow-x: hidden;
  }
</style>
