{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@sections/*": ["src/components/sections/*"],
      "@layouts/*": ["src/layouts/*"],
      "@ui-components/*": [
        "src/components/ui/*",
        "src/components/ui/*/*/index.ts"
      ],
      "@react/*": ["src/components/react/*", "src/components/react/*/index.ts"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@content/*": ["src/content/*", "src/content/*/index.ts"],
      "@hooks/*": ["src/hooks/*", "src/hooks/*/index.ts"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "allowJs": true,
    "strict": true,
    "alwaysStrict": true,
    "erasableSyntaxOnly": true
  }
}
