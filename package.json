{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "bunx prettier . --write",
    "lint": "bunx biome lint --write",
    "format:all": "bunx prettier . --write && bunx biome lint --write"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.1",
    "@react-spring/three": "^10.0.2",
    "@react-three/fiber": "^9.3.0",
    "@shadergradient/react": "^2.3.2",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "astro": "^5.13.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "three": "^0.180.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "@types/three": "^0.180.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "^0.14.1"
  },
  "lint-staged": {
    "*.astro": [
      "bunx prettier --write",
      "git add"
    ],
    "*.{js,ts,jsx,tsx}": [
      "bunx prettier --write",
      "bunx biome lint --write",
      "git add"
    ],
    "*.{css}": [
      "bunx prettier --write",
      "git add"
    ],
    "*.+(json|yml|yaml)": [
      "bunx prettier --write",
      "git add"
    ]
  }
}