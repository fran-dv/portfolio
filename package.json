{
  "name": "portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "format": "bunx prettier . --write",
    "lint": "bunx biome lint --write",
    "format:all": "bunx prettier . --write && bunx biome lint --write"
  },
  "dependencies": {
    "astro": "^5.13.6"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "^0.14.1"
  },
  "lint-staged": {
    "*.astro": [
      "bunx prettier --write",
      "git add"
    ],
    "*.{js,ts,jsx,tsx}": [
      "bunx prettier --write",
      "bunx biome lint --write",
      "git add"
    ],
    "*.{css}": [
      "bunx prettier --write",
      "git add"
    ],
    "*.+(json|yml|yaml)": [
      "bunx prettier --write",
      "git add"
    ]
  }
}